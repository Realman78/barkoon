    <nav class="nav">
        <div class="nav-links">
            <button class="nav-link2" data-toggle="modal" data-target="#createOrganisationModal">
                <i id="createOrganisationLink" class="fas fa-plus"></i>
                Create group
            </button>
            <button class="nav-link2">
                <i class="fas fa-chalkboard"></i>
                My tasks
            </button>
            <button class="nav-link2" id="settingButton">
                <i class="fas fa-user-circle"></i>
                Settings
            </button>
            <button id="logoutLink" class="nav-link2">
                <i class="fas fa-sign-out-alt"></i>
                Log out
            </button>
        </div>
        <div class="nav-overlay"></div>
    </nav>

    <div class="container-tasks">


        <div class="glass">
            <h1 class="group-name">My group</h1>
            <div class="cards">
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>To Do</h1>
                    <div class="tasksSection" id="tasksDiv">

                    </div>
                </div>
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>In progress</h1>
                    <div class="tasksSection" id="tasksDivInProgress">

                    </div>
                </div>
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>In review</h1>
                    <div class="tasksSection" id="tasksDivInReview">

                    </div>
                </div>
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>Done</h1>
                    <div class="tasksSection" id="tasksDivDone">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <button id="addTaskButton" class="add button-add"><i class="fas fa-edit"></i></button>


    {{!-- MODALS --}}
