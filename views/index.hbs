    <title>Home</title>
</head>

<body>
    <script>
        var user = {{{ userJS }}}

    </script>
    <div class="container">
        <div id="menu" class="container-menu" onclick="myFunction(this)">
            <div class="bar1"></div>
            <div class="bar2"></div>
            <div class="bar3"></div>
        </div>
        <nav class="nav">
            <div class="nav-links">
                <a href="#" class="nav-link dropbtn" onclick="openOrganizations()">
                    <i class="fas fa-chalkboard"></i>
                    Dashboard
                </a>
                <div id="dropdown" class="dropdown-content">
                    <button data-target="#createOrganisationModal"> <a id="createOrganisationLink" href="#" class="dropdown-link">createOrganization</a></button>
                    <a href="#Organization1" class="dropdown-link">Organization1</a>
                    <a href="#Organization2" class="dropdown-link">Organization2</a>
                </div>
                <a href="/settings" class="nav-link">
                    <i class="fas fa-user-circle"></i>
                    Profile
                </a>
                <a href="#" id="logoutLink" class="nav-link">
                    <i class="fas fa-sign-out-alt"></i>
                    Log out
                </a>
            </div>
            <div class="nav-overlay"></div>
        </nav>
        <div class="glass">

            <div class="cards">
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>To Do</h1>
                    <div class="tasksSection" id="tasksDiv">

                    </div>
                </div>
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>In progress</h1>
                    <div class="tasksSection" id="tasksDivInProgress">

                    </div>
                </div>
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>In review</h1>
                    <div class="tasksSection" id="tasksDivInReview">

                    </div>
                </div>
                <div class="card" ondrop="drop(event)" ondragover="allowDrop(event)">
                    <h1>Done</h1>
                    <div class="tasksSection" id="tasksDivDone">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <button id="addTaskButton" class="add"><i class="fas fa-edit"></i></button>


    {{!-- MODALS --}}
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>
    
    <!-- Modal -->
    <div class="modal fade" id="createOrganisationModal" tabindex="-1" role="dialog" aria-labelledby="createOrganisationModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createOrganisationModalLabel">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="text">
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
    {{!-- END OF MODALS --}}
